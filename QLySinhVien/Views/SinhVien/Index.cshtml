@model IEnumerable<QLySinhVien.Models.SinhVienViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sinh viên</h2>
<div class="row">
    <div class="col-sm-6">
        <a class="btn btn-outline-primary">  @Html.ActionLink("Thêm sinh viên", "Create")</a>
    </div>
       
</div>

<p><br />@ViewBag.result<br></p> @*Viewbag để in ra thông báo tìm kiếm*@
@using (Html.BeginForm("Index", "SinhVien", FormMethod.Get))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <input class="form-control" type="text" name="searchName" placeholder="Nhập vào họ tên" />
            </div>
            <div class="col-sm-6 col-md-3">
                <input class="form-control" type="text" name="searchClass" placeholder="Nhập vào lớp" />
            </div>
            <div class="col-sm-6">
                <button class="btn btn-primary" type="submit"> <i class="fa fa-search"></i>Tìm kiếm</button>
            </div>
        </div>
    </div>
}
<table class="table table-hover">
    <thead class="thead-">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.TenLSH)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            @*<td>
                    @(item.GioiTinh ? "Nam": "Nữ")
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLSH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDSinhVien }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDSinhVien }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDSinhVien })
            </td>
        </tr>
    }

</table>